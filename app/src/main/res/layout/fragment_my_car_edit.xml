<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingLeft="@dimen/material_padding"
    android:paddingRight="@dimen/material_padding"
    android:paddingBottom="@dimen/material_padding"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/user_data"></include>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
                android:id="@+id/body_type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body_type"
                android:textColor="@color/black87"
                android:textSize="@dimen/sp20"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/material_edit_text_line_margin"
                android:layout_weight="1"/>

            <auto_services.sequenia.com.autoservices.widgets.BodyTypeSpinner
                android:id="@+id/body_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_edit_text_height"
                android:gravity="center"
                android:background="@drawable/edit_text_bg"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>