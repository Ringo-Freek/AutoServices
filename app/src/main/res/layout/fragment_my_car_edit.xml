<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingTop="@dimen/my_car_content_margin"
    android:paddingLeft="@dimen/material_padding"
    android:paddingRight="@dimen/material_padding"
    android:paddingBottom="@dimen/material_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="@dimen/my_car_edit_line_height">

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_name"
            style="@style/BigEditTextLabel"/>

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_edit_text_height"
            android:gravity="center"
            style="@style/EditText.Big"
            android:hint="@string/your_name"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="@dimen/my_car_edit_line_height">

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
            android:id="@+id/phone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            style="@style/BigEditTextLabel"/>

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_edit_text_height"
            android:gravity="center"
            style="@style/EditText.Big"
            android:hint="@string/phone_number"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="@dimen/my_car_edit_line_height">

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
            android:id="@+id/car_mark_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_mark"
            style="@style/BigEditTextLabel"/>

        <auto_services.sequenia.com.autoservices.widgets.CarMarkSpinner
            android:id="@+id/car_mark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_edit_text_height"
            android:gravity="center"
            android:background="@drawable/edit_text_bg"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="@dimen/my_car_edit_line_height">

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
            android:id="@+id/car_registration_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registration_number"
            style="@style/BigEditTextLabel"/>

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumEditText
            android:id="@+id/car_registration_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_edit_text_height"
            android:gravity="center"
            style="@style/EditText.Big"
            android:hint="@string/registration_number"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
            android:id="@+id/body_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/body_type"
            android:textColor="@color/black87"
            android:textSize="@dimen/sp20"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/material_edit_text_line_margin"
            android:layout_weight="1"/>

        <auto_services.sequenia.com.autoservices.widgets.BodyTypeSpinner
            android:id="@+id/body_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_edit_text_height"
            android:gravity="center"
            android:background="@drawable/edit_text_bg"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>