<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_centerVertical="true"
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingTop="@dimen/material_padding"
        android:paddingBottom="@dimen/material_padding"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginRight="@dimen/material_padding_between_row_half"
            android:background="@drawable/schedule_setting_btn_add"
            android:layout_width="@dimen/schedule_setting_size_button"
            android:layout_height="@dimen/schedule_setting_size_button"/>

        <ImageButton
            android:layout_marginLeft="@dimen/material_padding_between_row_half"
            android:background="@drawable/schedule_setting_btn_delete"
            android:layout_width="@dimen/schedule_setting_size_button"
            android:layout_height="@dimen/schedule_setting_size_button"/>
    </LinearLayout>

</RelativeLayout>