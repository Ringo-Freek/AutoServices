<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
			  style="@style/MarginTB"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
					  style="@style/TextViewBlackCenter"
                      android:layout_weight="1"
                      android:id="@+id/enroll_item_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

                <auto_services.sequenia.com.autoservices.widgets.ModernhMediumTextView
						style="@style/TextViewBlackCenter"
                        android:id="@+id/enroll_item_coast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_width="@dimen/drawer_menu_icon_size"
                    android:layout_height="@dimen/drawer_menu_icon_size" />
</LinearLayout>