<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="android:textColorHint">@color/black26</item>
    </style>

    <style name="Inputs" parent="AppTheme">
        <item name="colorControlActivated">@color/amber_700</item>
        <item name="colorControlNormal">@color/black54</item>
    </style>

    <style name="DrawerRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/material_padding_between_row</item>
        <item name="android:paddingTop">@dimen/material_padding_between_row</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_margin">@dimen/material_padding</item>
    </style>
    
    <style name="ContentBlock">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/material_padding_between_row</item>
        <item name="android:layout_marginBottom">@dimen/material_padding_between_row</item>
    </style>

    <style name="Btn">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Btn.OrangeBgr" parent="@style/Btn">
        <item name="android:background">@drawable/orange_btn</item>
    </style>

    <style name="TextViewCustom">
        <item name="android:layout_marginBottom">@dimen/material_padding_between_row</item>
    </style>

    <style name="TextViewHeader" parent="@style/TextViewCustom">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/teal_800</item>
    </style>

    <style name="TextViewHeader.Big" parent="TextViewHeader">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="TextViewGrey.Medium" parent="TextViewGrey">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewGrey.Small" parent="@style/TextViewGrey">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewGreyWithBottomPadding" parent="@style/TextViewGrey">
        <item name="android:layout_marginBottom">@dimen/material_padding_between_row</item>
    </style>

    <style name="TextViewBlackWithBottomPadding" parent="@style/TextViewBlack">
        <item name="android:layout_marginBottom">@dimen/material_padding_between_row</item>
    </style>

    <style name="TextViewBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextViewBlack.Big" parent="@style/TextViewBlack">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextViewBlack.Medium" parent="@style/TextViewBlack">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextViewBlack.Small" parent="@style/TextViewBlack">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBlack.Small.AlignRight" parent="@style/TextViewBlack.Small">
        <item name="android:gravity">right</item>
    </style>

    <style name="TextViewGrey.Small.AlignRight" parent="@style/TextViewGrey.Small">
        <item name="android:gravity">right</item>
    </style>

    <style name="MarginTB">
        <item name="android:layout_marginBottom">@dimen/material_padding_between_row</item>
        <item name="android:layout_marginTop">@dimen/material_padding_between_row</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="EditText.Big" parent="EditText">
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="EditText.Medium" parent="EditText">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="EditText.Medium.Multiline" parent="EditText.Medium">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BigEditTextLabel">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="EditTextLabel.Small" parent="BigEditTextLabel">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="TextViewWhite">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="EditTextLabel.Small.GravityLeft" parent="EditTextLabel.Small">
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="GreyElement">
        <item name="android:background">@drawable/grey_element_bg</item>
    </style>
</resources>
